#include<bits/stdc++.h>
using namespace std;

using namespace std;

int main(){
    string line;
    int cont=0;

    while(getline (cin,line)) {
          int tam =line.size();
          for(int i=0;i<tam;i++){
                  if((line[i]>='A' && line[i]<='Z')||(line[i]>='a' && line[i]<='z')){

                              for(;(line[i]>='A' && line[i]<='Z')||(line[i]>='a' && line[i]<='z') && i<tam;i++){}
                              cont++;
                              
                  }

          }
        cout<<cont<<endl;
          cont=0;
    }

 return 0;
}
